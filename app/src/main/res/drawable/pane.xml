<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" /> <!--Higher value will round the edges of the pane-->
            <stroke android:width="1dip" android:color="@color/black" />
            <!--Gradient not currently applied, but change endColor to darker if you want to apply it-->
            <gradient android:angle="-90" android:startColor="@color/black" android:endColor="@color/black" />
        </shape>
    </item>
</selector>